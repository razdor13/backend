generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id String @id @default(ulid())
  mame String
  email String @unique
  password String 

  createdAt DateTime @default(now())
}

model Movie {
  id           String   @id @default(uuid())
  title        String
  overview     String?
  releaseYear  Int
  genres       String[] @default([])
  runtime      Int?
  posterUrl    String?
  createdBy    String
  createdAt    DateTime @default(now())
}